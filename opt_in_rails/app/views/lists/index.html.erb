<p id="notice"><%= notice %></p>

<h1 style="display: inline">Lists</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td>
          <%= best_in_place list, :name %>
        </td>
        <td><%= link_to 'Show', list, class: "button tiny secondary", style: "margin: 0" %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' }, class: "button tiny alert", style: "margin: 0" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New List', new_list_path, class: "button", style: "color: white" %>
